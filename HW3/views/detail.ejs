<!DOCTYPE html>
<html>
<head>
  <title><%= game.title %> Details</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="detail-container">
    <h1><%= game.title %> Details</h1>
    <p>Release Year: <%= game.releaseYear %></p>
    <p>Price: <%= game.price %></p>
    
<!--HW6-->   
    <form action="/update" method="post">
      <input type="hidden" name="id" value="<%= game.id %>" />
      <input type="text" name="title" placeholder="Title" value="<%= game.title %>" />
      <input type="text" name="releaseYear" placeholder="Release Year" value="<%= game.releaseYear %>" />
      <input type="text" name="price" placeholder="Price" value="<%= game.price %>" />
      <button type="submit">Save</button>
      <button type="button" onclick="clearForm()">Clear</button>
    </form>
  </div>
</body>
  
<script>
function clearForm() {
  const form = document.querySelector("form");
  for (const input of form.querySelectorAll("input")) {
    input.value = "";
  }
}
</script>
    <!-- Link back to home page -->
    <a href="/">Home</a>
</html>
